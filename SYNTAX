SYNTAX RULES

# STATEMENTS :
  STATEMENT ';'
  | STATEMENTS STATEMENT ';'
  | ';'
  |

# STATEMENT :
  IF
  | DOWHILE
  | WHILE
  | SWITCH
  | FOR
  | FUNCTION
  |

# FUNCTION
  'function' IDENTIFIER '(' ARGUMENTS ')' '{' '}'

# ARGUMENTS
  ARGUMENTS ',' ARGUMENT 
  | ARGUMENTS ARGUMENT ','
  | 

# ARGUMENT :
  VALUE

# DOWHILE :
  'do' '{' STATEMENTS '}' 'while' '(' CONDITATION ')' ';'

# WHILE :
  'while' '(' CONDITATION ')' '{' STATEMENTS '}'

# FOR :
  'for' '(' EXPRESSIONS ';' CONDITATION ';' EXPRESSIONS ')' '{' STATEMENTS '}'

# IF :
  'if'  '(' CONDITATION ')' '{' STATEMENTS '}'
  | 'if'  '(' CONDITATION ')' '{' STATEMENTS '}' ELSE

# ELSE :
  'else' IF
  | 'else' '{' STATEMENTS '}'

# VALUE
  [a-zA-Z_][a-zA-Z0-9_]+
  (-|+|)[0-9]+
  (-|+|)[0-9]+\.[0-9]+
  'true'
  'false'
  'null'
